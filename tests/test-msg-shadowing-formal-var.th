dolphin(int weight, int age):
    print("inside dolphin.")
    print("dolphins local sum var =")
    int sum = weight + age
    print(sum)

    receive:
        // msg local var shadowing msg formal var
        swim(int hours):
            int hours = 0
            print("inside swim().")
            print("dolphins hours =")
            print(hours)

        // msg formal shadowing actor formal
        eat(int weight):
            print("inside eat().")
            print("eat()s formal weight =")
            print(weight)

        // msg formal shadowing actor local
        sleep(int sum):
            print("inside sleep().")
            print("sleep()s local sum =")
            print(sum)
    drop:
        print("inside drop().")
        print("dolphins formal weight = ")
        print(weight)
        print("dolphins local sum = ")
        print(sum)
    after:
        return;
        
func main() -> int:
    int weight = 10
    int age = 3
    actor d = new dolphin(weight, age)
    
    // Testing formal args shadowing
    swim(13) | d
    eat(30) | d
    sleep(0) | d
    hello() | d
    die() | d

    return 0

